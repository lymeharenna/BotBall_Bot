    get_create_distance();
    set_create_total_angle(0);
    set_create_distance(0);
    while (get_create_total_angle() < 90) {
        create_drive_direct(-200, 200);   
    }

    create_drive_direct(540, 540);
    
	// pick up water block using claw:
    // enable_servos();
